<view class="page-header">
	<text class="page-header-text">{{title}}</text>
</view>
<scroll-view class="page-body" scroll-y="true">
	<navigator url="../pdetail/pdetail?tb={{item.tb}}" wx:for="{{plat}}">
		<view class="item">
			<image class="poster" src="../../images/{{item.img}}"></image>
			<view class="meta">
				<text class="title">{{item.name}}</text>
			</view>
		</view>
	</navigator>
</scroll-view>